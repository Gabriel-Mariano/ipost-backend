generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String? @unique
  name     String
  email    String  @unique
  password String
  avatar   String?

  post     Publication[]
  comment  Comment[]
}

model Publication {
  id        String   @id @unique
  title     String
  content   String?
  createdAt DateTime @default(now()) @db.Timestamp(6)
  file      String?
  authorId  String
  
  user      User     @relation(fields: [authorId], references: [id])
  comment   Comment[]

  @@index([authorId], map: "Post_authorId_fkey")
}

model Comment {
  id        String   @id @unique
  comment   String
  createdAt DateTime @default(now()) @db.Timestamp(6)

  postId    String
  post      Publication   @relation(fields: [postId], references: [id])

  authorId  String
  user      User    @relation(fields: [authorId], references: [id]) 
}
