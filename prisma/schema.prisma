generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String? @unique
  name     String
  email    String  @unique
  password String
  avatar   String?
  post     Post[]
}

model Post {
  id        String   @id @unique
  title     String
  content   String?
  createdAt DateTime @default(now()) @db.Timestamp(6)
  file      String?
  authorId  String
  user      User     @relation(fields: [authorId], references: [id])

  @@index([authorId], map: "Post_authorId_fkey")
}
